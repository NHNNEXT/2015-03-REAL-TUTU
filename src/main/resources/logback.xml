            <!--<pattern>%-5level %d{HH:mm:ss} [%thread] %logger{36} [ %method\(\) - Line %line ] - [ Message ▶ %msg ]%n</pattern>-->
        <!--</encoder>-->
    <!--</appender>-->


    <logger name="org.next" level="DEBUG">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.springframework" level="WARN">
        <appender-ref ref="STDOUT" />
    </logger>

